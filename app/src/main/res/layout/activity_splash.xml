<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xitom.myview.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"/>


    <com.example.xitom.myview.PieChart
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        custom:textSize="40sp"
        custom:titleText="2017"
        custom:titleTextColor="#898729"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pieChart" />

    <com.example.xitom.myview.MyImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/pieChart"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>
